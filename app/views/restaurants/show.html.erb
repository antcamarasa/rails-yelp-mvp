<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>phone_number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>category:</strong>
  <%= @restaurant.category %>
</p>

<h2> All reviews </h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li><%= review.content %> <%= link_to "Delete", review_path(review), method: :delete, data: { confirm: "Are your Sure ?" } %> </li>

  <% end %>
</ul>

